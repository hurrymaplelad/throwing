package{	import flash.display.Graphics;	import flash.geom.Point;		public class LineTail extends Tail{				private var color:int;		private var thickness:int;		private var g:Graphics;				// Constructor //		public function LineTail(g:Graphics, length:int=1, thickness:int=3, color:int=0x000000){			this.g=g;			this.color=color;			this.thickness=thickness;			super(length);		}				override protected function buildNext(length:int):Tail{			return new LineTail(g,--length,thickness, color);		}			override public function draw():void {			g.lineStyle(thickness, color);			g.moveTo(start.x,start.y);			g.lineTo(end.x,end.y);						super.draw();		}	}}
package{	import flash.display.MovieClip;	import flash.events.*;		public class Throwable extends MovieClip{				private var dx:Number;		private var dy:Number;		private var xSpeed:Number;		private var ySpeed:Number;		private var dragXoffset:Number;		private var dragYoffset:Number;		private var dragCoeff:Number = .9;		private var dragging:Boolean;				private var mass:Number = 5;				// Constructon //		public function Throwable(){			dragXoffset=dragYoffset=0;			xSpeed=ySpeed=0;			addEventListener(MouseEvent.MOUSE_DOWN, handleMouseDown);		}				public function update():void{			dx=x;			dy=y;			if(dragging){				var mX=parent.mouseX + dragXoffset;				var mY=parent.mouseY + dragYoffset;				x=mX;				y=mY;			}else{				//xSpeed *= dragCoeff;				//ySpeed *= dragCoeff;				x+=xSpeed;				y+=ySpeed;				if((x>stage.stageWidth && xSpeed>0) || (x<0 && xSpeed<0)){					xSpeed=-xSpeed;				}				if(y>stage.stageHeight && ySpeed>0|| y<0 && ySpeed<0){					ySpeed=-ySpeed;				}			}			dx=x-dx;			dy=y-dy;		}				public function toss(xSpeed:Number,ySpeed:Number):void{			this.xSpeed=xSpeed;			this.ySpeed=ySpeed;		}				private function handleMouseDown(event):void{			xSpeed=ySpeed=0;			dragXoffset=x-parent.mouseX;			dragYoffset=y-parent.mouseY;			dragging=true;			stage.addEventListener(MouseEvent.MOUSE_UP, handleMouseUp);		}				private function handleMouseUp(event):void{			stage.removeEventListener(MouseEvent.MOUSE_UP, handleMouseUp);			dragging=false;			toss(dx/mass, dy/mass);		}	}}
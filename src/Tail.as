package{	import flash.geom.Point;		public class Tail{			protected var start:Point;		protected var end:Point;				protected var next:Tail;				// Constructor //		public function Tail(length:int=1){			this.start = new Point;			this.end = new Point;						if(length>1){				next=buildNext(length);			}		}				protected function buildNext(length:int):Tail{			return new Tail(--length);		}				public function update(p:Point):void{			if(hasNext()) next.update(start);			end=start;			start=p;		}			public function draw():void {					if(hasNext()){ next.draw();}		}				protected function hasNext():Boolean {			return next!=null;		}	}}
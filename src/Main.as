package{	import flash.display.Sprite;	import flash.events.Event;	import flash.geom.Point;	public class Main extends Sprite{		private var balls:Array = new Array();		private var tails:Array = new Array();		private static const NUM_BALLS:int = 20;		private static const MAX_INIT_SPEED:int = 10;				// Constructor //		public function Main(){			balls = new Array();			tails = new Array();												for(var i=0; i<NUM_BALLS; i++){				var ball:Ball = new Ball();				ball.y = ball.height;				ball.x = i * stage.stageWidth/NUM_BALLS;				addChild(ball);				balls.push(ball);				ball.toss(Math.random()*MAX_INIT_SPEED, Math.random()*MAX_INIT_SPEED);					//var color:int = Math.floor(Math.random()*0xffffff);				var color:int = 0x2840a3;				var tail:Tail = new FillTail(graphics, 10, ball.width/2, color, .7);				//var tail:Tail = new LineTail(graphics, 4, 3, color);				tails.push(tail);			}						addEventListener(Event.ENTER_FRAME, frameHandler);		}		function frameHandler(event):void {			graphics.clear();				for(var i:int=0; i<balls.length; i++){				var ball:Ball = balls[i];				ball.update();				tails[i].update(new Point(ball.x, ball.y));			}				for(i=0; i<tails.length; i++){				tails[i].draw();			}		}	}}